# NewsBot Configuration
# Copy this file to .env and fill in your actual values

# Discord Configuration (Required)
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here
APPLICATION_ID=your_discord_application_id_here

# Channel Configuration (Required)
NEWS_CHANNEL_ID=your_news_channel_id_here
ERRORS_CHANNEL_ID=your_errors_channel_id_here
LOG_CHANNEL_ID=your_log_channel_id_here

# Admin Configuration (Required)
ADMIN_USER_ID=your_discord_user_id_here
ADMIN_ROLE_ID=your_admin_role_id_here
NEWS_ROLE_ID=your_news_role_id_here

# Telegram Configuration (Optional - for news fetching)
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here

# OpenAI Configuration (Optional - for AI translation)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Monitoring Configuration (Optional)
WEBHOOK_URL=your_discord_webhook_url_for_alerts

# Development Configuration (Optional)
DEBUG_MODE=true
LOG_LEVEL=INFO 